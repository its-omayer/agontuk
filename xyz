import pyautogui
import math
import time
import random

# --- Settings ---
size = 15           # Heart size
center_x = 800      # Screen center X (adjust for your screen)
center_y = 400      # Screen center Y (adjust for your screen)
draw_speed = 0.001  # Mouse movement speed
message = "I Love You Nafisa"
typing_speed = 0.07

# --- Heart parametric equation ---
def heart(t):
    x = size * 16 * math.sin(t)**3
    y = -size * (13 * math.cos(t) - 5 * math.cos(2*t) - 2*math.cos(3*t) - math.cos(4*t))
    return x, y

# --- Draw heart with mouse ---
def draw_heart():
    steps = 1000
    start_x, start_y = heart(0)
    pyautogui.moveTo(center_x + start_x, center_y + start_y, duration=1)
    time.sleep(0.5)
    
    for i in range(steps + 1):
        t = i * 2 * math.pi / steps
        x, y = heart(t)
        pyautogui.moveTo(center_x + x, center_y + y, duration=draw_speed)

# --- Hacker-style typing ---
def hacker_type(text):
    # Click center before typing
    pyautogui.click(center_x, center_y)
    time.sleep(0.5)
    
    for char in text:
        pyautogui.typewrite(char)
        time.sleep(typing_speed + random.uniform(0, 0.03))

def main():
    print("You have 3 seconds to switch to a blank notepad or chat window...")
    time.sleep(3)
    
    draw_heart()
    time.sleep(0.5)
    hacker_type(message)

if __name__ == "__main__":
    main()
